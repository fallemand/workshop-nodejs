{
  "name": "tp",
  "version": "1.0.0",
  "description": "La idea de este ejercicio es armar un mini sitio de Mercado Libre con Home, Search, Vip, página de error, y Api. En cada parte vamos a ir agregando código que se integre al trabajo final. - **[Site Demo](https://workshop-node.herokuapp.com/)**",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "node-sass --output-style compressed -o assets/dist/styles assets/src/styles",
    "webpack": "webpack",
    "setup-e2e": "selenium-standalone install",    
    "test:unit": "jest",
    "test:e2e": "npm run setup-e2e && nightwatch",
    "debug": "NODE_ENV=development node --inspect index.js",    
    "lint:styles": "sass-lint -v -q",
    "lint:scripts": "./node_modules/.bin/eslint -c .eslintrc assets/src/scripts || true",
    "build:styles": "npm run lint:styles && npm run scss",
    "build:scripts": "npm run lint:scripts && npm run webpack",
    "watch:styles": "onchange \"assets/src/styles\" -- npm run build:styles",
    "watch:scripts": "onchange \"assets/src/scripts\" -- npm run build:scripts",
    "clean": "rimraf assets/dist/**/* && npm run mkdDistScript",
    "mkdDistScript": "mkdir assets/dist/scripts",
    "autoprefixer": "postcss -u autoprefixer -r assets/dist/styles/*",
    "imagemin": "imagemin assets/src/images/* -o assets/dist/images",
    "start": "NODE_ENV=production node index.js",
    "start-dev": "NODE_ENV=development ./node_modules/.bin/nodemon index.js",
    "build:images": "npm run imagemin",
    "build": "npm run clean && npm run build:styles && npm run build:scripts && npm run build:images",
    "watch:images": "onchange \"assets/src/images\" -- npm run build:images",
    "watch": "npm-run-all -p watch:styles watch:scripts watch:images",
    "postinstall": "npm run build"
  },
  "author": "Ariel Mariani",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.26.0",
    "babel-eslint": "6.1.2",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "3.5.0",
    "eslint-config-airbnb-base": "7.1.0",
    "eslint-plugin-import": "1.15.0",
    "imagemin-cli": "^3.0.0",
    "jest": "^21.2.1",
    "nightwatch": "^0.9.16",
    "nock": "^9.0.27",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.5.4",
    "sass-lint": "^1.10.2",
    "selenium-standalone": "^6.11.0",
    "serialize-javascript": "^1.4.0",
    "uglify-js": "^2.6.2",
    "webpack": "^3.8.1",
    "whatwg-fetch": "^2.0.3"
  },
  "dependencies": {
    "express": "^4.16.2",
    "express-react-views": "^0.10.4",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "jest": {
    "testRegex": "tp/test/unit/.*.js$"
  }
}
