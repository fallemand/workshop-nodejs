{
  "name": "workshop-node_grodriguezis",
  "version": "0.0.1",
  "description": "Integrated exercise for the nodejs workshop",
  "main": "index.js",
  "engines": {
    "node": "6.11.0"
  },
  "scripts": {
    "setup-e2e": "selenium-standalone install",
    "test:unit": "jest",
    "test:e2e": "nightwatch",
    "clean": "rimraf assets/dist/**/*",
    "autoprefixer": "postcss -u autoprefixer -r assets/dist/styles/*",
    "scss": "node-sass --output-style compressed -o assets/dist/styles assets/src/styles",
    "lint:styles": "sass-lint assets/src/styles/*.scss -v -q",
    "build:styles": "npm run lint:styles && npm run scss && npm run autoprefixer",
    "watch:styles": "onchange \"assets/src/styles\" -- npm run build:styles",
    "lint:scripts": "./node_modules/.bin/eslint -c .eslintrc assets/src/scripts || true",
    "uglifyjs": "uglifyjs assets/src/scripts/*.js -b -o assets/dist/scripts/app.js && uglifyjs assets/src/scripts/*.js -m -c -o assets/dist/scripts/app.min.js",
    "build:scripts": "npm run lint:scripts && npm run uglifyjs",
    "watch:scripts": "onchange \"assets/src/scripts\" -- npm run build:scripts",
    "imagemin": "imagemin assets/src/images/* -o assets/dist/images",
    "build:images": "npm run imagemin",
    "watch:images": "onchange \"assets/src/images\" -- npm run build:images",
    "build": "npm run clean && npm run build:styles && npm run build:images && npm run webpack",
    "watch": "npm-run-all -p watch:styles watch:scripts watch:images",
    "webpack": "webpack",
    "start": "NODE_ENV=production pm2 start index.js -i max --attach --name workspace",
    "start:dev": "NODE_ENV=development ./node_modules/.bin/nodemon index.js",
    "stop": "pm2 stop workspace"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fallemand/workshop-nodejs.git"
  },
  "keywords": [
    "node",
    "javascript",
    "express",
    "react"
  ],
  "author": "grodriguezis",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.26.0",
    "babel-eslint": "6.1.2",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "3.5.0",
    "eslint-config-airbnb-base": "7.1.0",
    "eslint-plugin-import": "1.15.0",
    "imagemin-cli": "^3.0.0",
    "jest": "^21.2.1",
    "nightwatch": "^0.9.16",
    "nock": "^9.0.27",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.5.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.1.1",
    "rimraf": "^2.5.4",
    "sass-lint": "^1.12.1",
    "selenium-standalone": "^6.11.0",
    "uglify-js": "^3.1.6",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "express": "^4.16.2",
    "express-react-views": "^0.10.4",
    "intl": "^1.2.5",
    "pm2": "^2.7.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "serialize-javascript": "^1.4.0"
  },
  "jest": {
    "testRegex": "/test/unit/.*.js$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dictado/.*"
    ]
  }
}
