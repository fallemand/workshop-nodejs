{
  "name": "workshop-node-tp",
  "version": "1.0.0",
  "description": "Integrated exercise for the Node.js Workshop",
  "main": "index.js",
  "scripts": {
    "setup-e2e": "selenium-standalone install --version=3.6.0 --drivers.chrome.version=2.33",
    "test:unit": "NODE_ENV=test mocha 'test/unit/**/*.js'",
    "test:e2e": "npm run setup-e2e && nightwatch",
    "webpack": "webpack",
    "clean": "rimraf assets/dist/**/* && mkdirp assets/dist/scripts assets/dist/styles",
    "autoprefixer": "postcss -u autoprefixer -r assets/dist/styles/*",
    "scss": "node-sass --output-style compressed -o assets/dist/styles assets/src/styles",
    "lint:scripts": "eslint **/*.js || true",
    "lint:styles": "sass-lint assets/src/styles/*.scss -v -q",
    "uglify": "uglifyjs assets/src/scripts/*.js -m -o assets/dist/scripts/app.js && uglifyjs assets/src/scripts/*.js -m -c -o assets/dist/scripts/app.min.js",
    "imagemin": "imagemin assets/src/images/* -o assets/dist/images",
    "start-dev": "NODE_ENV=development ./node_modules/.bin/nodemon index.js",
    "start-test": "NODE_ENV=test node index.js",
    "start": "NODE_ENV=production node ./node_modules/.bin/pm2 start index.js -i max --attach",
    "build:styles": "npm run lint:styles && npm run scss && npm run autoprefixer",
    "build:scripts": "npm run lint:scripts && npm run webpack",
    "build:images": "npm run imagemin",
    "build": "npm run clean && npm run build:styles && npm run build:scripts && npm run build:images",
    "watch:styles": "onchange \"assets/src/styles\" -- npm run build:styles",
    "watch:scripts": "onchange \"assets/src/scripts\" -- npm run build:scripts",
    "watch:images": "onchange \"assets/src/images\" -- npm run build:images",
    "watch": "npm-run-all -p watch:styles watch:scripts watch:images",
    "postinstall": "npm run build"
  },
  "author": "Facundo Allemand (facundo.allemand@mercadolibre.com)",
  "license": "ISC",
  "engines": {
    "node": "6.11.0"
  },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "6.1.2",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^3.5.0",
    "eslint": "3.5.0",
    "eslint-config-airbnb-base": "7.1.0",
    "eslint-plugin-import": "1.15.0",
    "express": "^4.15.2",
    "express-handlebars": "^3.0.0",
    "handlebars": "^4.0.10",
    "handlebars-loader": "^1.5.0",
    "helmet": "^3.5.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.3.0",
    "nightwatch": "0.9.12",
    "nock": "^9.0.13",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "pm2": "^2.6.1",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.4",
    "sass-lint": "^1.10.2",
    "selenium-standalone": "5.8.0",
    "uglify-js": "^2.6.2",
    "webpack": "^2.6.1"
  },
  "optionalDependencies": {
    "fsevents": "*"
  }
}
